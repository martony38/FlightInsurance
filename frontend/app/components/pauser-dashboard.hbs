
<div class="panel">
  <h2>Admin Selection</h2>
  <div class="panel-section">
    <label>Choose an admin to impersonate:</label>
    <select onchange={{action (mut this.selectedAdmin) value="target.value"}}>
      <option value=''>Select address</option>
      {{#each @admins as |admin|}}
        <option value={{admin}}>{{truncate-text admin limit=12}}</option>
      {{/each}}
    </select>
  </div>
</div>
<OperationalStatus @admin={{this.selectedAdmin}}/>
